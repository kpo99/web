<!DOCTYPE html>
<html>
<head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
</head>
<body>
    <input name="name" id="name" type = "text" placeholder="name">
    <br>
    <input name="surname" id="surname" type = "text" placeholder="surname">
    <br>
    <input name="patronymic" id="patronymic" type = "text" placeholder="patronymic">
    <br>
    <input name="email"  id="email" type = "text" placeholder="email">
    <br>
    <input name="group_name"  id="group_name" type = "text" placeholder="group name">
    <br>
    <input name="study_year" id="study_year" type = "text" placeholder="study year">
    <br>
    <button id="btn">Submit</button>
    <script>

        $( "#btn" ).click(function() {
            $.ajax({
                url: '/api/user/?' + $.param({'name': $("#name").val(),'surname': $("#surname").val(),
                    'patronymic': $("#patronymic").val(),'email': $("#email").val(),'group_name': $("#group_name").val(),
                    'study_year': $("#study_year").val()}),
                type: 'PUT',
                success: function(result) {
                    // Do something with the result
                }
            });
        });
    </script>
</body>
</html>